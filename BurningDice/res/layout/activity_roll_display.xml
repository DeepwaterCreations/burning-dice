<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/is_success_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="TESTissuccess"
        />
        
    <TextView
        android:id="@+id/num_dice_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/is_success_field"
        android:text="TESTnumdice"
        />
    
    <TextView
        android:id="@+id/die_results_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/num_dice_field"
        android:text="TESTdieresults"
        />
    
    <TextView
        android:id="@+id/difficulty_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/die_results_field"
        android:text="TESTdifficulty"
        />
    
    <Button
        android:id="@+id/fate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/difficulty_field"
        android:text="@string/fatebutton"/>

    <Button
        android:id="@+id/deeds_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fate_button"
        android:layout_alignBottom="@+id/fate_button"
        android:layout_toRightOf="@+id/fate_button"
        android:text="@string/deedsbutton" />

    <TextView
        android:id="@+id/num_success_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/die_results_field"
        android:layout_toRightOf="@+id/num_dice_field"
        android:text="TESTnumsuccess" />

    <TextView
        android:id="@+id/ob_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/die_results_field"
        android:layout_toRightOf="@+id/num_success_field"
        android:text="TESTob" />

</RelativeLayout>
